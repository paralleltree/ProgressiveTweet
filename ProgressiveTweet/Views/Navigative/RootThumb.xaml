<UserControl x:Class="ProgressiveTweet.Views.RootThumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="32" Width="32">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="../Themes/NavigativeButtonDictionary.xaml"/>
        </Grid.Resources>

        <Button Background="Transparent" Style="{StaticResource NavigativeButtonStyle}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="#40FFFFFF"/>
                        <Ellipse Fill="#A0FFFFFF" Margin="3"/>
                        <Ellipse Fill="#F0FFFFFF" Margin="6"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
